<?xml version="1.0"?>
<robot name="tracked_vehicle" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Materials -->
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="dark_grey">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
  <material name="light_grey">
    <color rgba="0.7 0.7 0.7 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <!-- Constants -->
  <!-- Dimensions from inputs -->
  <xacro:property name="chassis_width" value="0.355"/>  <!-- 35.5 cm -->
  <xacro:property name="total_width" value="0.695"/>    <!-- 69.5 cm -->
  <xacro:property name="track_width" value="0.165"/>    <!-- 16.5 cm -->
  <xacro:property name="vehicle_length" value="1.285"/> <!-- 128.5 cm -->
  <xacro:property name="vehicle_height" value="0.575"/> <!-- 57.5 cm -->
  
  <!-- Calculated dimensions -->
  <xacro:property name="track_length" value="${vehicle_length * 0.9}"/> <!-- 90% of the vehicle length -->
  <xacro:property name="chassis_height" value="${vehicle_height * 0.6}"/> <!-- 60% of the vehicle height -->
  <xacro:property name="wheel_radius" value="${vehicle_height * 0.3}"/> <!-- 30% of the vehicle height -->
  <xacro:property name="wheel_sep_length" value="${track_length * 0.7}"/> <!-- 70% of the track length for wheel separation -->

  <!-- Base Link (Center of the robot) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${vehicle_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
      <material name="dark_grey"/>
      <origin xyz="0 0 ${wheel_radius + chassis_height/2}"/>
    </visual>
    <collision>
      <geometry>
        <box size="${vehicle_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
      <origin xyz="0 0 ${wheel_radius + chassis_height/2}"/>
    </collision>
    <inertial>
      <mass value="50.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      <origin xyz="0 0 ${wheel_radius + chassis_height/2}"/>
    </inertial>
  </link>

  <!-- Right Track -->
  <link name="right_track_link">
    <visual>
      <geometry>
        <box size="${track_length} ${track_width} ${wheel_radius * 0.7}"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="${track_length} ${track_width} ${wheel_radius * 0.5}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <joint name="right_track_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_track_link"/>
    <origin xyz="0 ${-(chassis_width/2 + track_width/2)} ${wheel_radius * 0.7}"/>
  </joint>
  
  <!-- Left Track -->
  <link name="left_track_link">
    <visual>
      <geometry>
        <box size="${track_length} ${track_width} ${wheel_radius * 0.7}"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="${track_length} ${track_width} ${wheel_radius * 0.5}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <joint name="left_track_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_track_link"/>
    <origin xyz="0 ${chassis_width/2 + track_width/2} ${wheel_radius * 0.7}"/>
  </joint>

  <!-- Front Right Wheel (Sprocket) -->
  <link name="front_right_wheel_link">
    <visual>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius}"/>
      </geometry>
      <material name="light_grey"/>
      <origin rpy="${pi/2} 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius}"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <joint name="front_right_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_right_wheel_link"/>
    <origin xyz="${vehicle_length/2 - wheel_radius} ${-(chassis_width/2 + track_width/2)} ${wheel_radius}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Front Left Wheel (Sprocket) -->
  <link name="front_left_wheel_link">
    <visual>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius}"/>
      </geometry>
      <material name="light_grey"/>
      <origin rpy="${pi/2} 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius}"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <joint name="front_left_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_left_wheel_link"/>
    <origin xyz="${vehicle_length/2 - wheel_radius} ${chassis_width/2 + track_width/2} ${wheel_radius}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear Right Wheel (Idler) -->
  <link name="rear_right_wheel_link">
    <visual>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.8}"/>
      </geometry>
      <material name="light_grey"/>
      <origin rpy="${pi/2} 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.8}"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <inertia ixx="0.015" ixy="0.0" ixz="0.0" iyy="0.015" iyz="0.0" izz="0.015"/>
    </inertial>
  </link>

  <joint name="rear_right_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_right_wheel_link"/>
    <origin xyz="${-vehicle_length/2 + wheel_radius} ${-(chassis_width/2 + track_width/2)} ${wheel_radius * 0.8}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Rear Left Wheel (Idler) -->
  <link name="rear_left_wheel_link">
    <visual>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.8}"/>
      </geometry>
      <material name="light_grey"/>
      <origin rpy="${pi/2} 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.8}"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <inertia ixx="0.015" ixy="0.0" ixz="0.0" iyy="0.015" iyz="0.0" izz="0.015"/>
    </inertial>
  </link>

  <joint name="rear_left_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_left_wheel_link"/>
    <origin xyz="${-vehicle_length/2 + wheel_radius} ${chassis_width/2 + track_width/2} ${wheel_radius * 0.8}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Road Wheels (Right Side) -->
  <link name="right_road_wheel_front_link">
    <visual>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.6}"/>
      </geometry>
      <material name="light_grey"/>
      <origin rpy="${pi/2} 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.6}"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="right_road_wheel_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_road_wheel_front_link"/>
    <origin xyz="${wheel_sep_length/4} ${-(chassis_width/2 + track_width/2)} ${wheel_radius * 0.6}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_road_wheel_rear_link">
    <visual>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.6}"/>
      </geometry>
      <material name="light_grey"/>
      <origin rpy="${pi/2} 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.6}"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="right_road_wheel_rear_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_road_wheel_rear_link"/>
    <origin xyz="${-wheel_sep_length/4} ${-(chassis_width/2 + track_width/2)} ${wheel_radius * 0.6}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Road Wheels (Left Side) -->
  <link name="left_road_wheel_front_link">
    <visual>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.6}"/>
      </geometry>
      <material name="light_grey"/>
      <origin rpy="${pi/2} 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.6}"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="left_road_wheel_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_road_wheel_front_link"/>
    <origin xyz="${wheel_sep_length/4} ${chassis_width/2 + track_width/2} ${wheel_radius * 0.6}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="left_road_wheel_rear_link">
    <visual>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.6}"/>
      </geometry>
      <material name="light_grey"/>
      <origin rpy="${pi/2} 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${track_width * 0.9}" radius="${wheel_radius * 0.6}"/>
      </geometry>
      <origin rpy="${pi/2} 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="left_road_wheel_rear_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_road_wheel_rear_link"/>
    <origin xyz="${-wheel_sep_length/4} ${chassis_width/2 + track_width/2} ${wheel_radius * 0.6}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Ouster Lidar Sensor Frame -->
  <!-- <link name="os_sensor">
    Empty link serving as a reference frame for the Ouster lidar
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link> -->

  <joint name="velodyne_joint" type="fixed">
    <parent link="base_link"/>
    <child link="velodyne"/>
    <origin xyz="${vehicle_length/3} 0 ${wheel_radius + chassis_height + 0.02}"/>
  </joint>

  <link name="velodyne">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
	      <!--<mesh filename="package://turtlebot3_gazebo/models/turtlebot3_common/meshes/lds.dae" scale="0.001 0.001 0.001"/> -->
      </geometry>
      <material name="red"/>
    </visual>

    <collision>
      <origin xyz="0.015 0 -0.0065" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.0315" radius="0.055"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="${vehicle_length/3} 0 ${wheel_radius + chassis_height + 0.02}"/>
  </joint>

  <link name="imu_link"/>

  <gazebo reference="imu_link">
    <sensor name="tb3_imu" type="imu">
      <always_on>true</always_on>
      <update_rate>200</update_rate>
      <imu>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>

  <gazebo reference="velodyne">
    <sensor name="velodyne" type="gpu_lidar">
        <update_rate>10</update_rate>
        <visualize>true</visualize>
        <always_on>true</always_on>
        <ignition_frame_id>velodyne</ignition_frame_id>
        <topic>velodyne</topic>
        <lidar>
          <scan>
            <horizontal>
              <samples>512</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159265359</min_angle>
              <max_angle>3.14159265359</max_angle>
            </horizontal>
            <vertical>
              <samples>32</samples>
              <resolution>1</resolution>
              <min_angle>-0.55</min_angle>
              <max_angle>0.26</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.2</min>
            <max>131.0</max>
            <resolution>0.01</resolution>
          </range>
        </lidar>
      </sensor>
  </gazebo>

  <!-- <joint name="os_sensor_joint" type="fixed">
    <parent link="base_link"/>
    <child link="os_sensor"/>
    <origin xyz="${vehicle_length/3} 0 ${wheel_radius + chassis_height + 0.02}"/>
  </joint> -->

  <gazebo>
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>left_wheel_joint</right_joint>
      <wheel_separation>${total_width}</wheel_separation>
      <wheel_radius>${wheel_radius}</wheel_radius>
      <max_linear_acceleration>1.0</max_linear_acceleration>
      <child_frame_id>base_link</child_frame_id>
      <topic>cmd_vel</topic>
      <tf_topic>/tf</tf_topic>
      <!-- <odom_topic>odom</odom_topic>
      <frame_id>odom</frame_id>     -->
      <!-- <odom_publisher_frequency>30</odom_publisher_frequency> -->
    </plugin>        
  </gazebo>

  <gazebo>
    <plugin filename="gz-sim-joint-state-publisher-system"
      name="gz::sim::systems::JointStatePublisher">
      <topic>joint_states</topic>
      <!-- <update_rate>30</update_rate> -->
      <joint_name>left_wheel_joint</joint_name>
      <joint_name>right_wheel_joint</joint_name>
    </plugin>
  </gazebo>

